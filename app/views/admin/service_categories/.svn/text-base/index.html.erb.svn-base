<% content_for :main_menu  do %>
  <%= render :partial => "admin/main/partials/menus/main", :locals => {:menu_type => "service_verify"} %>
<% end %>
<% content_for :sider_menu  do %>
  <%= render :partial => "admin/main/partials/menus/service_verify"%>
<% end %>
<div class="gm-tabs s-h-wrapper">
  <div class="gm-tabs-head">
    <a href="#"  class="current">序列号分类管理</a>
  </div>
  <div class="gm-tabs-content current">
    <div class="s-table">
      <table>
        <thead>
          <tr>
            <th width="50">选项</th>
            <th width="50">分类名</th>
            <th width="100">操作</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td>
                <div class="s-input">
                  <input type="checkbox" value="<%=  category.id%>" name="ids[]" />
                </div>
              </td>
              <td><%= category.name  %> </td>
              <td class="edit">
                <%= link_to image_tag("icon/edit.png"), edit_admin_service_category_path(category), :title => "修改" %>
                <%= link_to image_tag("icon/delete.png"), admin_service_category_path(category), :method => "delete", :title => "删除", :confirm => "是否确认删除？" %>
              </td>
            </tr>
          <%end%>
        </tbody>
      </table>
    </div>

    <div class="gm-pagination">
      <%= paginate @categories %>
    </div>

  </div>
</div>