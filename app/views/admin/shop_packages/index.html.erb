<% content_for :main_menu  do %>
  <%= render :partial => "admin/main/partials/menus/main", :locals => {:menu_type => "shop"} %>
<% end %>
<% content_for :sider_menu  do %>
  <%= render :partial => "admin/main/partials/menus/shop"%>
<% end %>
<h3 class="s-title-head"><img src="/assets/icon/warning.png" alt="" />商城管理 > 套餐信息管理 </h3>
<div class="gm-tabs s-h-wrapper">
  <div class="gm-tabs-head">
    <a href="#"  class="current">套餐信息管理</a>
  </div>
  <div class="gm-tabs-content current">
    <div class="gm-toolbar">
      <ul>
        <li><%= link_to "添加套餐", new_admin_shop_package_path %></li>
      </ul>
    </div>
    <div class="s-table">
      <table>
        <thead>
          <tr>
            <th width="50">选项</th>
            <th width="50">序号</th>
            <th width="50">套餐名称</th>
            <th width="80">价格</th>
            <th width="80">市场价格</th>
            <th width="80">库存量</th>
            <th width="110">更新时间</th>
            <th width="100">操作</th>
          </tr>
        </thead>
        <tbody>
          <% @shop_packages.each do |package| %>
            <tr>
              <td>
                <div class="s-input">
                  <input type="checkbox" value="<%=  package.id%>" />
                </div>
              </td>
              <td><%= package.id  %> </td>
              <td><%= package.name  %> </td>
              <td><%= currency_price(package.price)  %> </td>
              <td><%= currency_price(package.market_price)  %> </td>
              <td><%= package.stock  %> </td>
              <td><%= current_time_format(package.updated_at)%></td>
              <td class="edit">
                <%= link_to image_tag("icon/edit.png"), edit_admin_shop_package_path(package) %>
                &nbsp;&nbsp;
                <%= link_to image_tag("icon/delete.png"), admin_shop_package_path(package), :method => :delete ,:confirm => "你确定要删除吗？" %>
              </td>
            </tr>
          <%end%>
        </tbody>
      </table>
    </div>

    <div class="gm-pagination">
      <%= paginate @shop_packages %>
    </div>

  </div>
</div>