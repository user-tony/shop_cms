<% content_for :main_menu  do %>
  <%= render :partial => "admin/main/partials/menus/main", :locals => {:menu_type => "template"} %>
<% end %>
<% content_for :sider_menu  do %>
  <%= render :partial => "admin/main/partials/menus/template"%>
<% end %>
<div class="gm-tabs s-h-wrapper">
  <div class="gm-tabs-content current">
    <div class="s-table">
      <div class="gm-tag-nav">
        模板类型： <%= link_to "全部模版", admin_templates_path, :class => "#{'current' unless params[:key]}"  %><span class="split">|</span>
        <% TemplateCategory::GROUP_TYPE.each do |name,type|  %>
          <%= link_to type[:name], admin_templates_path(:type => type[:key]), :title => type[:description], :class => "#{ 'current' if type[:key].to_i == params[:key].to_i }" %> <span class="split">|</span>
        <% end %>
      </div>
      <table>
        <thead>
          <tr>
            <th width="500">模版分类名称 </th>
            <th width="75%">描述 </th>
          </tr>
        </thead>
        <tbody>
          <% @template_categories.each do |category| %>
            <tr>
              <td style ="font-weight: bold "><%= link_to  category.name, list_admin_template_path(category) %> </td>
              <td><%=category.description%> </td>
            </tr>
          <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>